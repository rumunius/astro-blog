      projects={[
        {
          name: '用Arduino在LCD12864上播放《Badapple!!》',
          description: '有屏幕的地方就有……',
          links: [{ type: 'github', href: 'https://github.com/rumunius/arduinoBadapple' }]
        },
        {
          name: 'Arduino 2048游戏',
          description: '基于Arduino nano在LCD12864上实现2048小游戏',
          links: [{ type: 'github', href: 'https://github.com/rumunius/arduino2048' }]
